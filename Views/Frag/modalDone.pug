    // Evento para cerrar el modal
    document.getElementById('btn-clsD').addEventListener('click', () => {
        const modal = document.getElementById("Modal-done");
        // Primer contenedor
        const primeraPartForm = document.querySelector('.cont-firsD'); // Aspectos del div
        // Segundo contenedor
        const segundaPartForm = document.querySelector('.cont-secondD');
        //- segundaPartForm.style.display = "none";
        // Contenedor de los elementos checkBox
        const contABorrarSP = document.querySelector('.contD');
        modal.classList.add('hide');
        modal.classList.remove('show');
        setTimeout(() => {
            modal.style.display = 'none';
            // Cambios del contenedores
            primeraPartForm.style.display = "flex";
            segundaPartForm.style.display = "none";
            contABorrarSP.innerHTML = ''; // Borramos los elementos creados en la pestaÃ±a de tasks BUSCALO
        }, 200);
    });
    // Evneto para mostrar la siguiente parte del formulario
    document.getElementById('btn-nextD').addEventListener('click', () => {
        const primeraParteForm = document.querySelector('.cont-firsD'); // Aspectos del div
        primeraParteForm.style.display = "none";
        const primeraSegundoForm = document.querySelector('.cont-secondD');
        primeraSegundoForm.style.display = "flex";
    });
    // Evento para volver al anterior parte del formulario
    document.getElementById('btn-bckD').addEventListener('click', () => {
        const primeraParteForm = document.querySelector('.cont-firsD'); // Aspectos del div
        primeraParteForm.style.display = "flex";
        
        const primeraSegundoForm = document.querySelector('.cont-secondD');
        primeraSegundoForm.style.display = "none";
    });

