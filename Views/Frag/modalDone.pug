div(class='modal' id='Modal-done')
    .cont-modal 
        .cont-close-btn
            span(id='btn-clsD') &times;
        h1.title Resume
        .cont-form
                .cont-firsD
                    h2.subt-title Data general task

                    p.txt(id='ownerD')

                    label(class="etiqueta-form" for='tlR') Title task
                    input(type="text", placeholder="Title", name="title", id='tlD', class="entrada", required, readonly)

                    label(class="etiqueta-form" for='op-users') Responsible user 
                    select(name="userRespons", class="entrada user-select", id='op-users', required, readonly)
                        option(value=respUs, class='option-s' id='v-respD')

                    label(class="etiqueta-form" for ='desR') Task description
                    textarea(name="descrip", class="entrada text-area", id='desD', required, readonly)= instructionsTask

                    label(class="etiqueta-form" for='datR') Deadline
                    input(type="date", id='datD', name="date_finish", class="entrada date-input", onkeydown="return false", required, readonly)

                    .cont-next 
                        span(class="material-symbols-outlined", id='btn-nextD', title="Next fields") arrow_back

                .cont-secondD
                    .cont-back 
                        span(class="material-symbols-outlined", id='btn-bckD', title="Go back") arrow_back
                    h2.subt-title Users in this task
                    .cont-users-chk
                            .contD

                    label(class="etiqueta-form" for ='desDStatus') Why Status
                    textarea(name="descrip", class="entrada text-area", id='desDStatus', required, readonly)

                    p.subt-title-nop(id='userWhy')
                    .dates-don
                        p.subt-title-nop(id='I-in-D') Creation date: 
                        p.subt-title-nop(id='F-in-D') Deadline:
                        p.subt-title-nop(id='statu') Status: 
script.
    // Animacion del modal para abrirlo
    //- document.getElementById('btn-tasks').addEventListener('click', () => {
