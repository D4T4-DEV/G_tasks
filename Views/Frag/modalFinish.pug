div(class='modal' id='Modal-resFin-fin')
    .cont-modal 
        .cont-close-btn
            span(id='btn-clsFini') &times;
        h1.title You really want to complete this task?
        .cont-form
            form(action=`/` class="formulario" method='POST' autocomplete="off", id='fom-finshi')
                .cont-firsRD
                    label(class="etiqueta-form" for ='rs-fin') Reason:
                    textarea(name="reason", class="entrada text-area", id='rs-fin', required)
                    .cont-btns
                        button(type="button", class="btn" id='b-n-fin') NO
