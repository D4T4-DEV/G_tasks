                        button(type="submit" class="btn-del") YES
script.
    
    // Evento para cerrar el modal
    document.getElementById('btn-clsFini').addEventListener('click', () => {
        const modal = document.getElementById("Modal-resFin-fin");
        // Primer contenedor
        modal.classList.add('hide');
        modal.classList.remove('show');
        
        setTimeout(() => {
            modal.style.display = 'none';
            // Cambios del contenedores
        }, 200);
    });

    document.getElementById('b-n-fin').addEventListener('click', () => {
        const modal = document.getElementById("Modal-resFin-fin");
