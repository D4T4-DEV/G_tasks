    // Evento para cerrar el modal
    document.getElementById('btn-clsR').addEventListener('click', () => {
        const modal = document.getElementById("Modal-res");
        // Primer contenedor
        const primeraPartForm = document.querySelector('.cont-firsR'); // Aspectos del div
        // Segundo contenedor
        const segundaPartForm = document.querySelector('.cont-secondR');
        //- segundaPartForm.style.display = "none";
        // Contenedor de los elementos checkBox
        const contABorrarSP = document.querySelector('.contR');
        modal.classList.add('hide');
        modal.classList.remove('show');
        setTimeout(() => {
            modal.style.display = 'none';
            // Cambios del contenedores
            primeraPartForm.style.display = "flex";
            segundaPartForm.style.display = "none";
            contABorrarSP.innerHTML = ''; // Borramos los elementos creados en la pestaÃ±a de tasks BUSCALO
        }, 200);
    });
    // Evneto para mostrar la siguiente parte del formulario
    document.getElementById('btn-nextR').addEventListener('click', () => {
        const primeraParteForm = document.querySelector('.cont-firsR'); // Aspectos del div
        primeraParteForm.style.display = "none";
        const primeraSegundoForm = document.querySelector('.cont-secondR');
        primeraSegundoForm.style.display = "flex";
    });
    // Evento para volver al anterior parte del formulario
    document.getElementById('btn-bckR').addEventListener('click', () => {
        const primeraParteForm = document.querySelector('.cont-firsR'); // Aspectos del div
        primeraParteForm.style.display = "flex";
        
        const primeraSegundoForm = document.querySelector('.cont-secondR');
        primeraSegundoForm.style.display = "none";
    });

