doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/globalStyle.css")
        link(rel="stylesheet", href="/css/newTaskSyte.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        title New task
    body 
        .cont-form 
            a(href="/created-tasks" class="atras")
                span(class="material-symbols-outlined") arrow_back 

            h2.titulo Create new task
            form(action="/create-new-task" class="formulario" method='POST' autocomplete="off")
                label(for="title" class="etiqueta-form") Title task
                input(type="text", placeholder="Title", id="title", name="title", class="entrada", required)

                hr(class='division')
                label(for="user" class="etiqueta-form") User 1
                select(name="user", id="user", class="entrada", required) 
                    //- Esto cambialo de manera nativa
                    option(value="1" class='option-s') Manuel 
                    option(value="2" class='option-s') David  

                label(for="text-area" class="etiqueta-form") Instructions
                textarea(name="instructions" class="entrada", id='text-area', required)

                label(for="date-finish" class="etiqueta-form") Deadline
                input(type="date", name="date-finish" class="entrada" id="date-finish" required)

                button(type='button' id='new-person' class='btn-add-user') 
                    span(class="material-symbols-outlined") person_add

                button(type="submit", class="btn") Add
    
    script.
        var numUser = 1;
            // Evento click del btn 'new-person'
            document.getElementById('new-person').addEventListener('click', function() {

                document.getElementById('new-person').style.marginTop ='8px';

                numUser ++;
                // Cadena de HTML
                const formHTML = `
                    <hr class='division'>
                    <label for="user" class="etiqueta-form">User ${numUser}</label>
                    <select name="user" id="user" class="entrada" required>
                        <option value="1" class='option-s'>Manuel</option>
                        <option value="2" class='option-s'>David</option>
                    </select>
                    <label for="text-area" class="etiqueta-form">Instructions</label>
                    <textarea name="instructions" class="entrada" id="text-area" required></textarea>
                    <label for="date-finish" class="etiqueta-form">Deadline</label>
                    <input type="date" name="date-finish" class="entrada" id="date-finish" required>
                `;

                // Tomamos la referencia del elemento  Insertamos el valor al DOM, indicandole que lo queremos antes de este elemento
                document.getElementById('new-person').insertAdjacentHTML('beforebegin', formHTML);
            });

