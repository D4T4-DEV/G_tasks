doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        link(rel="stylesheet", href="/css/globalStyless.css")
        link(rel="stylesheet", href="/css/loginStyles.css")
        link(rel="stylesheet", href="/css/alertaNotifi.css")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        title Iniciar Sesión
    body 

        div#alerta 
            .cont-alert 
                span(class="material-symbols-outlined" id='icon-error') error
                span#mensaje Estamos experimentando problemashasgdasgdjagh...
                span#cerrar-notificacion &times
        script.
            const x = document.getElementById("alerta");
            x.className = "show-alert";
            setTimeout(function(){ x.className = x.className.replace("show-alert", ""); }, 4500);


        .cont-login
            h2.titulo Iniciar sesión
            form(action="/iniciar-sesion", method="post", id='formulario')
                //- Medios del usuario
                label(for="user" class='etiq-form') Usuario  
                input(type="text", name="user", id='user' class='inpt-form' required)
                //- Medios de la contrasenia
                label(for="pwd" class='etiq-form') Contraseña  
                input(type="password", name="pwd", id='pwd', class='inpt-form' required)

                //- Medio para mostrar la contrasenia
                label(for="show-pwd" class='etiq-ch')
                    input(type="checkbox" id="show-pwd" name="checkBoxPWD")
                    |  Mostrar contraseña


                //- Boton
                button(type="submit", class="btn") Iniciar Sesión

        //- Script para mostrar la contraseña
        script.

            const isSelected = document.getElementById("show-pwd");
            const pwd = document.getElementById("pwd");

            // Evento cuando se tenga un click
            isSelected.addEventListener('click', () => {
                if(pwd.type === 'password') {
                    pwd.type = 'text';
                } else { 
                    pwd.type = 'password';
                }
            });